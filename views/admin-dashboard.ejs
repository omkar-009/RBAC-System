<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/views/public/style.css">

</head>
<body class="admin-dashboard-page">
    <div class="sidebar">
        <div class="sidebar-title mb-4">
            <i class="bi bi-shield-lock"></i> Admin
        </div>
        <nav class="nav flex-column">
            <a class="nav-link active" href="/admin/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a class="nav-link" href="/admin/users"><i class="bi bi-people"></i> Users</a>
            <a class="nav-link" href="/admin/create-user"><i class="bi bi-plus-circle"></i> Create User</a>
            <a class="nav-link logout" href="/users/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </nav>
    </div>
    <div class="main-dashboard">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top d-lg-none">
            <div class="container-fluid">
                <a class="navbar-brand" href="/admin/dashboard">
                    <i class="bi bi-shield-lock"></i> Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto">
                        <span class="nav-item nav-link">
                            <i class="bi bi-person-circle"></i> <%= user.name %>
                        </span>
                        <a class="nav-item nav-link" href="/users/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <div class="dashboard-container fade-in">
            <div class="row mb-4">
                <div class="col">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-person-circle card-icon"></i>
                        </div>
                        <div>
                            <h2 class="mb-1">Welcome, <%= user.name %></h2>
                            <p class="lead mb-0 text-muted">Role: Admin</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-people card-icon"></i>
                                <h3 class="mb-0 ms-2">Users</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted">Manage users and their roles</p>
                            <div class="mt-3">
                                <a href="/admin/users" class="btn btn-primary w-100">
                                    <i class="bi bi-arrow-right card-icon me-2"></i> View Users
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-plus-circle card-icon"></i>
                                <h3 class="mb-0 ms-2">Create User</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted">Add new users to the system</p>
                            <div class="mt-3">
                                <a href="/admin/create-user" class="btn btn-success w-100">
                                    <i class="bi bi-plus card-icon me-2"></i> Create User
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col">
                    <h2 class="mb-3">Users List</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.role %></td>
                                    <td>
                                        <a href="/admin/edit-user/<%= user._id %>" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                        <a href="/admin/delete-user/<%= user._id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</body>
</html>